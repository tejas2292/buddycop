<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".police.AdminEnterWanted">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/edit_text_background"
        android:padding="15dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wanted Name:"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etWantedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyEditTextTheme"
        android:hint="Enter wanted name"
        android:inputType="textCapWords"
        android:textSize="18sp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wanted Crime:"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/offencedesc"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="18sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E8C8C"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place of crime done:"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter place name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:theme="@style/MyEditTextTheme"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:background="@drawable/btn_bg"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Submit"
            android:onClick="onEnterWantedPic"/>

    </LinearLayout>

</LinearLayout>